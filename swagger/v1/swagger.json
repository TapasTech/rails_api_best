{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/articles": {
      "get": {
        "summary": "文章列表",
        "tags": [
          "articles"
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "articles found",
            "examples": {
              "application/json": {
                "data": [
                  {
                    "id": 1,
                    "title": "Hello world!",
                    "summary": "summary",
                    "content": "content"
                  },
                  {
                    "id": 2,
                    "title": "Hello world!",
                    "summary": "summary",
                    "content": "content"
                  }
                ],
                "meta": {
                  "current_page": 1,
                  "total_pages": 1,
                  "next_page": 1,
                  "total_count": 1,
                  "per": 1
                }
              }
            },
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "summary": {
                        "type": "string"
                      },
                      "content": {
                        "type": "string"
                      }
                    }
                  }
                },
                "meta": {
                  "type": "object",
                  "properties": {
                    "current_page": {
                      "type": "integer"
                    },
                    "total_pages": {
                      "type": "integer"
                    },
                    "next_page": {
                      "type": "integer"
                    },
                    "total_count": {
                      "type": "integer"
                    },
                    "per": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "创建文章",
        "tags": [
          "articles"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "article",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                },
                "summary": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                }
              },
              "required": [
                "title",
                "content",
                "author",
                "summary"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "article created"
          },
          "422": {
            "description": "invalid request",
            "schema": {
              "$ref": "#/definitions/errors_object"
            }
          }
        }
      }
    },
    "/articles/{id}": {
      "get": {
        "summary": "获取文章详情",
        "tags": [
          "articles"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "文章ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "examples": {
              "application/json": {
                "data": {
                  "id": 1,
                  "title": "Hello world!",
                  "summary": "summary",
                  "content": "content"
                }
              }
            },
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "id": {
                    "type": "integer"
                  },
                  "title": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "404": {
            "description": "记录没找到",
            "schema": {
              "$ref": "#/definitions/errors_object"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "errors_object": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    }
  }
}